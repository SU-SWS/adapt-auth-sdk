{
  "name": "adapt-auth-sdk",
  "version": "2.0.0-alpha.1",
  "description": "Provides all the functionality needed to easily integrate your Javascript web applications with Stanford SAML federated identity provider.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./session": {
      "import": "./dist/session.js",
      "require": "./dist/session.js",
      "types": "./dist/session.d.ts"
    },
    "./edge-session": {
      "import": "./dist/edge-session.js",
      "require": "./dist/edge-session.js",
      "types": "./dist/edge-session.d.ts"
    },
    "./saml": {
      "import": "./dist/saml.js",
      "require": "./dist/saml.js",
      "types": "./dist/saml.d.ts"
    },
    "./next": {
      "import": "./dist/next.js",
      "require": "./dist/next.js",
      "types": "./dist/next.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SU-SWS/adapt-auth-sdk.git"
  },
  "author": "Stanford Web Services",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/SU-SWS/adapt-auth-sdk/issues"
  },
  "homepage": "https://github.com/SU-SWS/adapt-auth-sdk#readme",
  "dependencies": {
    "@node-saml/node-saml": "^5.0.1",
    "cookie": "^0.4.1",
    "iron-session": "^8.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5",
    "typescript-eslint": "^8.32.1"
  },
  "optionalDependencies": {
    "next": ">=14"
  },
  "engines": {
    "node": ">=18"
  }
}
