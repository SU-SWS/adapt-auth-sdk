{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "declaration": true,
    "target": "es2022",
    "allowJs": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}